{
  "name": "spellbook-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Walpapur Tabletop - Monorepo for microservices",
  "author": "Maksym",
  "license": "MIT",
  "workspaces": [
    "services/*",
    "gateway",
    "web"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "dev:down": "docker-compose down",
    "dev:logs": "docker-compose logs -f",
    "prod": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:build": "docker-compose -f docker-compose.prod.yml up -d --build",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "build": "npm run build:auth && npm run build:spell && npm run build:gateway && npm run build:web",
    "build:auth": "cd services/auth-service && npm run build --if-present",
    "build:spell": "cd services/spell-service && npm run build --if-present",
    "build:gateway": "cd gateway && npm run build --if-present",
    "build:web": "cd web && npm run build",
    "build:changed": "./scripts/build-changed.sh",
    "test": "./scripts/test-all.sh",
    "test:auth": "cd services/auth-service && npm test",
    "test:spell": "cd services/spell-service && npm test",
    "test:gateway": "cd gateway && npm test",
    "test:web": "cd web && npm test",
    "lint": "npm run lint:auth && npm run lint:spell && npm run lint:gateway && npm run lint:web",
    "lint:auth": "cd services/auth-service && npm run lint --if-present",
    "lint:spell": "cd services/spell-service && npm run lint --if-present",
    "lint:gateway": "cd gateway && npm run lint --if-present",
    "lint:web": "cd web && npm run lint --if-present",
    "install:all": "npm run install:auth && npm run install:spell && npm run install:gateway && npm run install:web",
    "install:auth": "cd services/auth-service && npm ci",
    "install:spell": "cd services/spell-service && npm ci",
    "install:gateway": "cd gateway && npm ci",
    "install:web": "cd web && npm ci",
    "clean": "npm run clean:auth && npm run clean:spell && npm run clean:gateway && npm run clean:web",
    "clean:auth": "cd services/auth-service && rm -rf node_modules dist build",
    "clean:spell": "cd services/spell-service && rm -rf node_modules dist build",
    "clean:gateway": "cd gateway && rm -rf node_modules dist build",
    "clean:web": "cd web && rm -rf node_modules build",
    "detect:changes": "./scripts/detect-changes.sh",
    "db:up": "docker-compose up db -d",
    "db:down": "docker-compose stop db",
    "db:logs": "docker-compose logs -f db",
    "db:shell": "docker exec -it walpapur-db mysql -uroot -p",
    "logs:auth": "docker-compose logs -f auth-service",
    "logs:spell": "docker-compose logs -f spell-service",
    "logs:gateway": "docker-compose logs -f gateway",
    "logs:web": "docker-compose logs -f web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
